    let hindiState = document.getElementById("mstate");
    let hindiDistrict = document.getElementById("mdistrict");
    let femaleState = document.getElementById("festate");
    let femaleDistrict = document.getElementById("fdistrict");
    let panditState = document.getElementById("pstate");
    let panditDistrict = document.getElementById("pdistrict");
    let menDistrict = document.getElementById("emdistrict");
    let menState = document.getElementById("mestate");
    let womenState = document.getElementById("fstate");
    let womenDistrict = document.getElementById("efdistrict");
    let weddingStateHindi = document.getElementById("marrstate");
    let weddingDistrictHindi = document.getElementById("marrdistrict");
    let weddingStateEnglish = document.getElementById("emarrstate");
    let weddingDistrictEnglish = document.getElementById("emarrdistrict");
    let listData;
    let englishListData;

    fetch("states-and-districts.json")
      .then((res) => res.json())
      .then((data) => {
        englishListData = data.states;
        data.states.forEach((state) => {
          // Create new options for each dropdown
          let menOption = document.createElement("option");
          menOption.value = state.state;
          menOption.innerHTML = state.state;
          menState.appendChild(menOption);

          let womenOption = document.createElement("option");
          womenOption.value = state.state;
          womenOption.innerHTML = state.state;
          womenState.appendChild(womenOption);

          let weddingOptionEnglish = document.createElement("option");
          weddingOptionEnglish.value = state.state;
          weddingOptionEnglish.innerHTML = state.state;
          weddingStateEnglish.appendChild(weddingOptionEnglish);
        });
      });

    fetch("state_in_Hindi.json")
      .then((res) => res.json())
      .then((data) => {
        listData = data.states;
        data.states.forEach((state) => {
          // Create new options for each dropdown
          let hindiOption = document.createElement("option");
          hindiOption.value = state.state;
          hindiOption.innerHTML = state.state;
          hindiState.appendChild(hindiOption);

          let femaleOption = document.createElement("option");
          femaleOption.value = state.state;
          femaleOption.innerHTML = state.state;
          femaleState.appendChild(femaleOption);

          let panditOption = document.createElement("option");
          panditOption.value = state.state;
          panditOption.innerHTML = state.state;
          panditState.appendChild(panditOption);

          let weddingOptionHindi = document.createElement("option");
          weddingOptionHindi.value = state.state;
          weddingOptionHindi.innerHTML = state.state;
          weddingStateHindi.appendChild(weddingOptionHindi);
        });
      });

    // Event listeners for Hindi dropdowns
    hindiState.addEventListener("change", function (e) {
      updateDistricts(hindiState, hindiDistrict, listData, "-- जिले का चयन करें --");
    });

    femaleState.addEventListener("change", function (e) {
      updateDistricts(femaleState, femaleDistrict, listData, "-- जिले का चयन करें --");
    });

    panditState.addEventListener("change", function (e) {
      updateDistricts(panditState, panditDistrict, listData, "-- जिले का चयन करें --");
    });

    weddingStateHindi.addEventListener("change", function (e) {
      updateDistricts(weddingStateHindi, weddingDistrictHindi, listData, "-- जिले का चयन करें --");
    });

    // Event listeners for English dropdowns
    menState.addEventListener("change", function (e) {
      updateDistricts(menState, menDistrict, englishListData, "-- Select District --");
    });

    womenState.addEventListener("change", function (e) {
      updateDistricts(womenState, womenDistrict, englishListData, "-- Select District --");
    });

    weddingStateEnglish.addEventListener("change", function (e) {
      updateDistricts(weddingStateEnglish, weddingDistrictEnglish, englishListData, "-- Select District --");
    });

    // Helper function to update districts
    function updateDistricts(stateElement, districtElement, listData, defaultOptionText) {
      listData.find((ele) => {
        if (ele.state === stateElement.value) {
          districtElement.innerHTML = `<option value="">${defaultOptionText}</option>`;
